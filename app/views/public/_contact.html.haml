#contact
	#contact_me.text_block
		.header
			Contact me!
		.description
			%p 
				If you have any questions, 
				or maybe you want me to make a project for you,
				%br/
				feel free to contact me!
	#contact_form_container
		.form-header
			You can contact me
			%br/
			just right now!
		#contact_form
			= form_for @message do |f|
				.input.small.email-field
					= f.label :email
					= f.text_field :email, class: 'small-input'
				.input.small.name-field
					= f.label :name
					= f.text_field :name,  class: 'small-input'
				.input
					= f.label :subject
					= f.text_field :subject
				.input
					= f.label :message
					= f.text_area :message
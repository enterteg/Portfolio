@import 'mixins'

@media (min-width: 2200px)	
	$banner-width: 1080px
	$banner-height: 670px
	#projects
		background-image: url('<%= asset_path('bg-idea.jpg') %>')
		#projects_banner
			top: 200px
			width: $banner-width
			height: #banner-height
			left: 250px

			.arrow
				padding: 0px 15px
				top: 0.45*$banner-height
				font-size: 40px
				&#prev
					left: -65px
				&#next
					right: -65px
			
			ul.projects_list
				li
					width: $banner-width
					.photo
						width: $banner-width
						height: $banner-height
						img
							width: $banner-width
					.description
						margin-top: 30px
						padding: 20px
						line-height: 33px
						font-size: 27px
						opacity: 0

						p
							margin-top: 10px

		#about_projects
			right: 170px
			top: 120px
			width: 350px
			+slide-on-show(1s,translateX(150px))
			.header
				+header(right,540px)
				font-size: 75px
			.description
				font-size: 30px
				line-height: 35px
				width: 550px
				p
					margin-top: 20px


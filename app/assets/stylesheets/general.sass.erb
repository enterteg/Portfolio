@import 'mixins'

*
	margin: 0px
	padding: 0px
	
html,body
	width: 100%
	margin: 0px
	padding: 0px
	font-family: 'Roboto', sans-serif
	overflow: hidden

body 
	font-family: 'Roboto', sans-serif
	color: white
	font-size: 20px

#loading_icon
	color: black
	text-align: center
	line-height: 90vh
	width: 100vw
	height: 100vh 
	background-color: white
	background-image: url('<%= asset_path('loader.gif') %>')
	background-repeat: no-repeat
	background-position: center
	z-index: 1000

#notice 
	position: fixed
	top: 10%
	width: 100%
	height: 12vh
	opacity: 0
	background-color: rgba(155,205,155,0.8)
	z-index: 500
	text-align: center
	font-size: 40px
	line-height: 12vh


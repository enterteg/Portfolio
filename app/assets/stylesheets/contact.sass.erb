@import 'mixins'

#contact
	width: 100%
	height: 100vh

	background-image: url('<%= asset_path('bg-contact2.jpg') %>')
	background-size: cover
	background-position: center
	position: relative
	text-shadow: 0px 0px 18px rgba(0,0,0,1)

	#contact_me
		float: left
		margin-top: 100px
		margin-left: 140px
		#contact_text
			float: left
			width: 500px
			+slide-on-show(1s ease all, translateX(-180px))
			.header
				color: lightgreen
				font-size: 55px
				padding: 0px
			.description
				font-size: 27px
				line-height: 34px
		#contact_form_container
			float: left
			width: 480px
			margin-top: 30px
			clear: both
			+slide-on-show(1s ease all, translateY(180px))

			#new_message
				margin-top: 40px
				label
					font-size: 20px
					margin-bottom: 5px
					float: left
				input
					padding: 0px 10px
					box-sizing: border-box
					height: 40px
					font-size: 17px
					&.submit-button, &.submit-button:active, &.submit-button:focus
						border: none
						letter-spacing: 2px
						width: 40%
						color: white
						font-size: 25px
						font-family: 'Roboto'
						outline: 2px solid rgba(255,255,255,0.3)
						background-color: rgba(255,255,255,0)
						+transition(0.2s ease all)
						&:hover
							background-color: rgba(255,255,255,0.1)
							cursor: pointer
							text-shadow: 0px 0px 8px black
				.input-box
					margin-bottom: 20px
					&.small
						width: 48%
						&.email-field
							float: left
						&.name-field
							float: right
				textarea, input
					font-family: sans-serif
					font-weight: 100
					width: 100%
					border: none
					outline: none
					color: rgba(50,50,0,1)
					background-color: rgba(250,250,250,0.5)
					&:focus
						border: 1px solid rgba(250,150,150,0.8)
						background-color: rgba(250,250,250,0.8)
				textarea
					height: 180px
					resize: none
					padding: 20px
					font-size: 18px
					box-sizing: border-box
	#contact_forms
		float: left
		position: relative
		top: 31%
		left: 40px
		+slide-on-show(1s ease all, translateX(180px))
		.helper-header
			margin-bottom: 20px
			font-size: 37px
		ul
			padding: 20px 50px 30px 50px
			list-style: none
			line-height: 70px
			font-size: 23px
			a
				position: relative
				left: 0px
				text-decoration: none
				color: white
				text-shadow: 0px 0px 10px rgba(250,250,250,0.3)
				+transition(0.3s ease all)
				&:hover
					left: 5px
					

			li
				i
					display: inline-block
					vertical-align: middle
					width: 50px
					height: 50px
					border-radius: 50%
					margin-right: 10px
					background-size: cover
					background-position: center
					&.email
						background-image: url('<%= asset_path('gmail-icon.png') %>')
					&.fb
						background-image: url('<%= asset_path('fb-icon2.png') %>')
					&.phone			
						background-image: url('<%= asset_path('phone-icon.png') %>')


.helper-header
	font-size: 30px
	color: rgba(250,250,150,1)

.clear
	clear: both

@media (max-width: 1600px)
	#contact
		#contact_me
			margin-top: 80px
			margin-left: 80px
			#contact_text
				
				width: 400px
				.header
					margin-bottom: 10px
					font-size: 40px
				.description
					font-size: 20px
					line-height: 27px
			#contact_form_container
				width: 400px
				margin-top: 20px

				#new_message
					margin-top: 20px
					label
						font-size: 15px
						margin-bottom: 5px
					input
						padding: 0px 10px
						height: 30px
						font-size: 12px
						&.submit-button, &.submit-button:active, &.submit-button:focus
							width: 30%
							font-size: 15px
					.input-box
						margin-bottom: 10px
					textarea
						height: 140px
						padding: 10px
						font-size: 12px
		#contact_forms
			top: 29%
			left: 10px
			+slide-on-show(0.8s ease all, translateX(180px))
			.helper-header
				margin-bottom: 5px
				font-size: 20px
			ul
				padding: 30px 
				line-height: 50px
				font-size: 17px
				li
					i
						width: 35px
						height: 35px
						margin-right: 5px


	.helper-header
		font-size: 20px

@import 'mixins'

#contact
	width: 100%
	height: 100vh

	background-image: url('<%= asset_path('bg-contact.jpg') %>')
	background-size: cover
	background-position: center
	position: relative
	#contact_me
		position: relative
		float: left
		&.text_block
			left: 140px
			top: 100px
			width: 500px
			.header
				color: lightgreen
				font-size: 55px
				padding: 0px
			.description
				font-size: 27px
				line-height: 34px
	#contact_form_container
		position: relative
		clear: both
		top: 130px
		width: 400px
		left: 140px
		.form-header
			font-size: 30px
		#contact_form
			margin-top: 40px

			label
				float: left
				display: block
			.input
				&.small
					width: 48%
					&.email-field
						float: left
					&.name-field
						float: right

			input
				clear: both
				width: 100%
				height: 30px
				&.small-input
					width: 100%

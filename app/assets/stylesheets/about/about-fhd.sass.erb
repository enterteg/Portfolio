@import 'mixins'

#about 
	width: 100%
	height: 100vh
	background-image: url('<%= asset_path('about.jpg') %>')
	background-size: cover
	background-position: center
	position: relative

	#me.text_block 
		opacity: 0
		
		@include transition(1s ease all)
		transform: translateX(-130px)
		position: absolute
		top: 80px
		left: 60px
		&.second_effect 
			transform: translateY(230px)
		
		&.second_effect_show 
			opacity: 1
			transform: translateY(0px)
		
		&.is-showing 
			opacity: 1
			@include transition(0.5s ease all)
			transform: translateY(0px)

		.header 
			+header(left, 400px)

		.description 
			font-size: 22px
			line-height: 33px
			p 
				margin-bottom: 20px
		

	#whatido	 
		position: absolute
		float: right
		right: 5vh
		bottom: 35vh
		+slide-on-show(0.4s ease all,translateX(60px))
		
		.header 
			+header(right, 400px)
		
		ul 
			text-shadow: 0px 0px 5px rgba(0,0,0,0.8)
			float: right
			list-style-image: url('<%= asset_path('ico.png') %>')
			li.list, li 
				width: auto
				text-align: right
				margin-right: 20px
				float: right
				clear: both
				line-height: 50px
				font-size: 23px
			
			li.nonlist 
				margin-right: 20px
				list-style-image: none
				list-style-type: none
			
	
	#technologies 
		display: flex
		justify-content: center
		width: 100%
		bottom: 5vh
		position: absolute
		opacity: 1
		@include transition(0.5s ease all)
				
		
		
		.rails 
			background-image: url('<%= asset_path('ror.png') %>')
			width: 80px
			height: 94px
			float: left
			opacity: 0.3
			background-size: 100% 100%
			@include transition(0.5s ease all)
			.desc 
				width: 350px
				left: -140px
				top: -100px
			
		
		.web 
			margin-left: 40px
			float :left
			background-image: url('<%= asset_path('tech.png') %>')
			width: 160px
			height: 88px
			background-size: 100% 100%
			opacity: 0.3
			@include transition(0.5s ease all)
			.desc 
				width: 300px
				left: -80px
				top: -100px

		.web:hover, .rails:hover 
			opacity: 0.8
			@include transition(0.5s ease all)
			.desc 
				opacity: 1
				display: block
				@include transition(0.5s ease all)
			
		
		.desc 
			color: white
			padding: 20px
			text-align: center
			opacity: 0
			position: relative
			font-size: 20px
			background-color: rgba(0,0,0,0.4)
			@include transition(0.5s ease all)


	
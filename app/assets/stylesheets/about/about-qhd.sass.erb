@import 'mixins'
@media (min-width: 2300px) 
	#about
		#me.text_block
			top: 80px
			left: 120px

			.header 
				width: 500px
				font-size: 55px
			
			.description 
				font-size: 32px
				line-height: 40px
				p 
					margin-bottom: 30px

		#whatido 

			right: 5vh
			bottom: 50vh
			.header 
				font-size: 60px
				width: 500px
				text-align: right
			
			ul 
				li.list, li 
					margin-right: 20px
					width: auto
					text-align: right
					line-height: 55px
					font-size: 34px
				
				li.nonlist 
					list-style-image: none
					list-style-type: none

		#technologies 
			.rails 
				width: 110px
				height: 114px
				
				
			.web 
				width: 240px
				height: 125px

			.web, .rails
				.desc
					position: relative 
					top: -160px
					display: block
					padding: 20px 10px
					font-size: 26px
					width: 500px
					left: 50%
					+transform(translateX(-50%))
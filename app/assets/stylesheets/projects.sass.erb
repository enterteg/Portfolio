@import 'mixins'

#projects
	width: 100%
	height: 100vh

	background-image: url('<%= asset_path('bg-idea.jpg') %>')
	background-size: cover
	background-position: center
	position: relative

	#projects_banner
		width: 800px
		height: 450px
		position: relative
		top: 160px
		left: 160px
		+transition(1s ease all)
		transform: translateY(-50px)
		opacity: 0
		&.show
			opacity: 1
			transform: translateY(0px)
		.arrow
			padding: 0px 20px
			color: gray
			background-color: rgba(0,0,0,0.2)
			position: absolute
			border-radius: 50%
			top: 45%
			z-index: -1
			font-size: 60px
			+transition(0.2s ease all)
			&:hover
				background-color: rgba(0,0,0,0.5)
				cursor: pointer
				&#prev
					left: -90px
				&#next
					right: -90px
			&#prev
				left: -85px
			&#next
				right: -85px

		ul.projects_list
			list-style: none
			position: relative
			li
				position: absolute
				width: 800px
				opacity: 0
				transform: translateY(-100px)
				z-index: -999
				.photo
					width: 800px
					height: 450px
					overflow: hidden
					img
						width: 800px

				.description
					font-style: italic
					margin-top: 50px
					padding: 30px
					background-color: rgba(0,0,0,0.3)
					text-shadow: 0px 0px 5px rgba(0,0,0,0.8)
					line-height: 25px
					float: left
					width: 100%
					box-sizing: border-box
					font-size: 18px
					p
						margin-top: 10px
				&.active
					transform: translateY(0px)
					+transition(1s ease all)
					opacity: 1


	#about_projects
		right: 50px
		left: auto
		.header
			text-align: right
			position: relative
			right: 20px
		.description
			text-align: right
			width: 400px
			text-shadow: 0px 0px 3px rgba(0,0,0,0.6)



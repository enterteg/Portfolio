@import 'mixins'

$menu_height: 160px
$menu_font_size: 27px

#header 
	position: relative
	background-position: center 
	height: 100vh
	min-height: 100vh
	width: 100%
	background-size: cover
	
	min-height: 600px

	#social 
		width: 40px
		height: 40px
		position: absolute
		top: 20px
		left: 20px
		background-image: url('<%= asset_path('fbicon.png') %>')
		background-size: 40px
		+grayscale(100%)
		+transition(0.3s ease all)
		opacity: 0.6
		&:hover 
			+grayscale(0%)
			cursor: pointer
			opacity: 1

	#container 
		max-width: 1000px
		margin: 0 auto
		height: auto

		#logo 
			padding-top: 20vh
			text-shadow: 0px 0px 10px rgba(0,0,0,0.1)
			width: 100%
			text-align: center
			.logo 	
				+slide-on-show(0.5s ease all, translateY(-20px))

			.portfolio 
				color: rgba(0,0,0,0.5)
				font-size: 45px
				text-transform: uppercase

			.name 
				font-family: 'Shadows Into Light Two', sans-serif
				font-size: 95px
				margin: 10px
				color: rgba(255,255,255,0.9)

			.quote 
				color: rgba(0,0,0,0.4)
				font-size: 30px
				text-transform: uppercase
				letter-spacing: -1px

		nav 
			width: 55%
			margin: 0 auto
			display: flex
			justify-content: center

			margin-top: 40px
			height: $menu_height
			clear: both	
			
			a
				text-decoration: none
			.circle 
				margin: 10px
				font-family: 'Pacifico', cursive
				width: $menu_height
				height: $menu_height
				background-color: rgba(0,0,0,0.3)
				border-radius: 50%
				text-align: center
				text-decoration: none
				line-height: $menu_height
				font-size: $menu_font_size
				color: rgba(255,255,255,0.7)
				+slide-on-show(0.5s ease all, translateY(-20px))
				&:hover 
					color: rgba(255,255,255,0.9)
					background-color: rgba(0,0,0,0.4)
					cursor: pointer
					transform: scale(1.1)


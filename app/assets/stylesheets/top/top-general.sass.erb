		#container
			#logo
				.portfolio 
					font-size: 84px

				.name 
					font-size: 165px

				.quote 
					font-size: 60px
			nav 
				display: -webkit-flex
				margin: 0 auto
				width: 80%
				margin-top: 65px
				.circle 
					margin: 15px

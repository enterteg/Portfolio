@import 'mixins';
#about {
	width: 100%;
	height: 100vh;

	background-image: url('<%= asset_path('about.jpg') %>');
	background-size: cover;
	background-position: center;
	position: relative;
}
.text_block {
	opacity: 0;
	@include transition(1s ease all);
	transform: translateX(-130px);
	position: absolute;
	top: 80px;
	left: 60px;
	&.second_effect {
		transform: translateY(230px);
	}
	&.second_effect_show {
		opacity: 1;
		transform: translateY(0px);
	}
	&.is-showing {
		opacity: 1;
		@include transition(0.5s ease all);
		transform: translateY(0px);

	}

	.header {
		width: 400px;
		font-size: 50px;
	}

	.description {
		font-size: 22px;
		line-height: 33px;
		p {
			margin-bottom: 20px;
		}
	}
}

.header {
	clear:both;
	
	padding: 10px;
	border-bottom: 1px solid rgba(255,255,255,0.1);
	margin-bottom: 30px;
}


#whatido	 {
	position: absolute;
	float: right;
	right: 10vh;
	bottom: 35vh;
	opacity: 0;
	@include transition(0.5s ease all);
	transform: translateX(60px);
	&.is-showing {
		opacity: 1;
		@include transition(0.5s ease all);
		transform: translateY(0px);
	}
	.header {
		font-size: 50px;
		width: 400px;
		text-align: right;
	}
	ul {
		float: right;
		display: inline-block;
		list-style-image: url('<%= asset_path('ico.png') %>');
		li.list, li {
			width: auto;
			text-align: right;
			margin-right: 20px;
			float: right;
			clear: both;
			line-height: 50px;
			font-size: 23px;
		}
		li.nonlist {
			margin-right: 20px;
			list-style-image: none;
			list-style-type: none;
		}
	}
}	

#technologies {
	position: absolute;
	left: 50%;
	bottom: 10vh;
	opacity: 0;
	@include transition(0.5s ease all);
	transform: translate(-130px,30px);
	&.is-showing {
		opacity: 1;
		@include transition(0.5s ease all);
		transform: translateY(-130px,0px);
		&.is-not-showing {
			opacity: 0;
			@include transition(0.5s ease all);
			transform: translateY(-130px,0px);
		}
	}
	
	.rails {
		background-image: url('<%= asset_path('ror.png') %>');
		width: 80px;
		height: 94px;
		float: left;
		opacity: 0.3;
		background-size: 100% 100%;
		@include transition(0.5s ease all);
		.desc {			
			width: 350px;
			left: -140px;
			top: -100px;
		}
	}
	.web {
		margin-left: 40px;
		float :left;
		background-image: url('<%= asset_path('tech.png') %>');
		width: 160px;
		height: 88px;
		background-size: 100% 100%;
		opacity: 0.3;
		@include transition(0.5s ease all);
		.desc {			
			width: 300px;
			left: -80px;
			top: -100px;
		}
	}
	.web:hover, .rails:hover {
		opacity: 0.8;
		@include transition(0.5s ease all);
		.desc {
			opacity: 1;
			display: block;
			@include transition(0.5s ease all);
		}
	}
	.desc {
			color: white;
			padding: 20px;
			text-align: center;
			opacity: 0;
			position: relative;
			font-size: 20px;
			background-color: rgba(0,0,0,0.4);
			@include transition(0.5s ease all);
		}
}


@media (max-width: 1400px) {


  #me {
		top: 40px;
		left: 40px;

		.header {
			width: 400px;
			font-size: 40px;
		}
		.description {
			font-size: 18px;
			line-height: 23px;
			p {
				margin-bottom: 20px;
			}
		}
	}

	#whatido {

	right: 5vh;
	bottom: 35vh;
		.header {
			font-size: 40px;
			width: 450px;
			text-align: right;
		}
		ul {

			li.list, li {
				margin-right: 20px; 
				width: auto;
				text-align: right;
				line-height: 30px;
				font-size: 18px;
			}
			li.nonlist {
				list-style-image: none;
				list-style-type: none;
			}
		}
	}	

	#technologies {
		left: 50%;
		bottom: 6vh;
		transform: translate(-80px,30px);
		.rails {
			width: 50px;
			height: 54px;
			.desc {			
				width: 280px;
				left: -120px;
				top: -80px;
			}
		}
		.web {
			margin-left: 25px;
			position: relative;
			top: -10px;
			width: 120px;
			height: 65px;
			
			.desc {			
				width: 240px;
				left: -70px;
				top: -70px;
			}
		}

		.desc {
			padding: 10px;
			font-size: 16px;
		}
	}
}
@import 'mixins';
$menu_height: 160px;
$header_height: 990px;
$menu_font_size: 27px;


@mixin translateY($value...) {
	-webkit-transform: $value;
  -moz-transform:    $value;
  -ms-transform:     $value;
  -o-transform:      $value;
  transform:         $value;
}

#container {
	width: 1000px;
	margin: 0 auto;
	height: auto;
}

#header {
	position: relative;
	width: 100%;
	background-image: url('<%= asset_path('header2.jpg') %>');
	background-position: center; 
	height: 100vh;
	background-size: cover;
	overflow: hidden;
	min-height: 600px;
}

#social {
	width: 40px;
	height: 40px;
	position: absolute;
	top: 20px;
	left: 20px;
	background-image: url('<%= asset_path('fbicon.png') %>');
	background-size: 40px;
	@include grayscale(100%);
	@include transition(0.3s ease all);
	opacity: 0.6;
}
#social:hover {
	@include grayscale(0%);
	@include transition(0.3s ease all);
	cursor: pointer;
	opacity: 1;
}
#logo {
	margin-top: 20vh;
	text-shadow: 0px 0px 10px rgba(0,0,0,0.1);
	width: 100%;
	text-align: center;
}
.portfolio {
	color: rgba(0,0,0,0.5);
	font-size: 45px;
	text-transform: uppercase;
}
.name {
	font-family: 'Shadows Into Light Two';
	font-size: 95px;
	margin: 10px;
	color: rgba(255,255,255,0.9);
}
.quote {
	color: rgba(0,0,0,0.4);
	font-size: 30px;
	text-transform: uppercase;
	letter-spacing: -1px;
}

nav ul li {
	font-family: 'Pacifico', cursive;
	display: inline;
	float: left;
	width: $menu_height;
	height: $menu_height;
	background-color: rgba(0,0,0,0.3);
	margin: 10px;
	border-radius: 50%;
	text-align: center;
	line-height: $menu_height;
	font-size: $menu_font_size;
	color: rgba(255,255,255,0.7);
	@include transition(0.5s ease all);
	opacity: 0;
	transform: translateY(-20px);
	
}
nav ul li:hover {
	color: rgba(255,255,255,0.9);
	background-color: rgba(0,0,0,0.4);
	cursor: pointer;
	transform: scale(1.1);
	@include transition(0.5s ease all);
}
#menu {
	width: 3*$menu_height+60;
	margin: 0 auto;
	margin-top: 40px;
	background-color: red;
	clear: both;
}

.logo {	
	opacity: 0;
	@include translateY(translateY(-20px));
}
.is-showing {
	opacity: 1;
	@include transition(0.5s ease all);
	transform: translateY(0px);
}